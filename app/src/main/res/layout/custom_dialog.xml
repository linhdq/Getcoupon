<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/custom_background_dialog"
    >
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_60sdp"
        android:layout_centerHorizontal="true"
        android:src="@mipmap/lazada"
        android:id="@+id/imv_logo"
        android:layout_marginTop="@dimen/_5sdp"
        />
    <ImageView
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_40sdp"
        android:layout_alignParentRight="true"
        android:src="@mipmap/ic_add"
        android:rotation="45"
        android:padding="@dimen/_4sdp"
        android:id="@+id/imv_close"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/imv_logo"
        android:paddingLeft="@dimen/_5sdp"
        android:paddingRight="@dimen/_5sdp"
        android:text="Giảm 50K cho đơn hàng 500K trở lên"
        android:textColor="@color/teal_primary_dark"
        android:gravity="center"
        android:textSize="@dimen/_13sdp"
        android:textStyle="bold"
        android:id="@+id/txt_title"
        android:maxLines="5"
        android:ellipsize="end"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_title"
        android:layout_marginTop="@dimen/_10sdp"
        android:background="@color/grey_300"
        android:padding="@dimen/_10sdp"
        android:id="@+id/layout_grey"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Copy mã dưới và dùng ở bước thanh toán"
            android:textAllCaps="true"
            android:textColor="@color/grey_700"
            android:textSize="@dimen/_11sdp"
            android:id="@+id/txt_title_2"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_60sdp"
            android:layout_below="@id/txt_title_2"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@color/white"
            android:padding="@dimen/_10sdp"
            android:id="@+id/layout_code"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/_88sdp"
                android:background="@drawable/custom_textview_code"
                android:text="TKBSB0805"
                android:gravity="center"
                android:textSize="@dimen/_14sdp"
                android:textColor="@color/grey_900"
                android:maxLines="1"
                android:ellipsize="end"
                android:paddingLeft="@dimen/_4sdp"
                android:paddingRight="@dimen/_4sdp"
                android:textStyle="bold"
                android:id="@+id/txt_code"
                />
            <RelativeLayout
                android:layout_width="@dimen/_90sdp"
                android:layout_height="match_parent"
                android:background="@drawable/custom_background_button_teal"
                android:layout_alignParentRight="true"
                android:id="@+id/item_copy"
                >
                <ImageView
                    android:layout_width="@dimen/_35sdp"
                    android:layout_height="match_parent"
                    android:src="@mipmap/ic_copy"
                    android:tint="@color/white"
                    android:id="@+id/imv_copy"
                    android:padding="@dimen/_2sdp"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@id/imv_copy"
                    android:gravity="center"
                    android:text="Copy"
                    android:textAllCaps="true"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_12sdp"
                    android:textStyle="bold"
                    android:layout_marginRight="@dimen/_10sdp"
                    />
            </RelativeLayout>
        </RelativeLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/layout_code"
            android:layout_marginTop="@dimen/_10sdp"
            android:text="Để được hưởng ưu đãi, các bạn vui lòng mua hàng ở trang khuyến mại dưới đây:"
            android:textColor="@color/grey_700"
            android:textSize="@dimen/_12sdp"
            android:textStyle="italic"
            android:id="@+id/txt_title_3"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_35sdp"
            android:background="@drawable/custom_background_item_teal"
            android:orientation="horizontal"
            android:id="@+id/item_website"
            android:gravity="center"
            android:layout_below="@id/txt_title_3"
            android:layout_marginTop="@dimen/_5sdp"
            >
            <ImageView
                android:layout_width="@dimen/_30sdp"
                android:layout_height="match_parent"
                android:src="@mipmap/ic_language"
                android:padding="@dimen/_5sdp"
                android:tint="@color/white"
                android:layout_marginRight="@dimen/_5sdp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/custom_background_item_teal"
                android:text="Đến trang khuyến mại"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="@dimen/_13sdp"
                android:id="@+id/txt_website"
                android:textAllCaps="true"
                />
        </LinearLayout>
    </RelativeLayout>
    <ImageView
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_30sdp"
        android:layout_below="@id/layout_grey"
        android:layout_marginLeft="@dimen/_5sdp"
        android:src="@mipmap/ic_follow"
        android:padding="@dimen/_2sdp"
        android:tint="@color/grey_700"
        android:id="@+id/imv_seen"

        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_30sdp"
        android:layout_below="@id/layout_grey"
        android:layout_toRightOf="@id/imv_seen"
        android:text="15 lượt đã sử dụng"
        android:gravity="center_vertical"
        android:textSize="@dimen/_12sdp"
        android:textColor="@color/grey_700"
        android:id="@+id/txt_number_used"
        />
</RelativeLayout>