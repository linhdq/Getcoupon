<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backround_color"
    android:padding="@dimen/_5sdp"
    tools:context="com.vn.getcoupon.getcouponvn.activity.AboutActivity">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_100sdp"
        android:background="@color/teal_primary"
        android:id="@+id/imv_logo"
        android:src="@mipmap/logo_256"
        android:tint="@color/white"
        android:padding="@dimen/_5sdp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imv_logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_10sdp"
        android:text="Website"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold"
        android:textSize="@dimen/_14sdp"
        android:id="@+id/txt_website_title"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_35sdp"
        android:background="@drawable/custom_background_item_teal"
        android:orientation="horizontal"
        android:id="@+id/item_website"
        android:gravity="center"
        android:layout_below="@id/txt_website_title"
        >
        <ImageView
            android:layout_width="@dimen/_30sdp"
            android:layout_height="match_parent"
            android:src="@mipmap/ic_language"
            android:padding="@dimen/_5sdp"
            android:tint="@color/white"
            android:layout_marginRight="@dimen/_5sdp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/custom_background_item_teal"
            android:text="https://getcoupon.vn"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/_13sdp"
            android:id="@+id/txt_website"
            />
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_website"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_10sdp"
        android:text="Feedback"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold"
        android:textSize="@dimen/_14sdp"
        android:id="@+id/txt_feedback_title"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_35sdp"
        android:background="@drawable/custom_background_item_teal"
        android:orientation="horizontal"
        android:id="@+id/item_feedback"
        android:gravity="center"
        android:layout_below="@id/txt_feedback_title"
        >
        <ImageView
            android:layout_width="@dimen/_30sdp"
            android:layout_height="match_parent"
            android:src="@mipmap/ic_send"
            android:padding="@dimen/_5sdp"
            android:tint="@color/white"
            android:layout_marginRight="@dimen/_5sdp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/custom_background_item_teal"
            android:text="Gửi phản hồi cho chúng tôi."
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/_13sdp"
            />
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_feedback"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_10sdp"
        android:text="App version"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold"
        android:textSize="@dimen/_14sdp"
        android:id="@+id/txt_app_version"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_35sdp"
        android:background="@drawable/custom_background_item_teal"
        android:orientation="horizontal"
        android:id="@+id/item_app_version"
        android:gravity="center"
        android:layout_below="@id/txt_app_version"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/custom_background_item_teal"
            android:text="@string/app_version"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/_13sdp"
            />
    </LinearLayout>
</RelativeLayout>
